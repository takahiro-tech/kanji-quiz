%h2.sign-up_cha サインアップ
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .field
    .field-box
      = f.label :nickname,"ニックネーム"
    = f.text_field :nickname, autofocus: true
    .field-error
      = render partial: 'shared/error_messages', locals: {user: @user, column: "nickname"}
  .field
    .field-box
      = f.label :email,"メールアドレス"
    = f.email_field :email, autofocus: true, autocomplete: "email"
    .field-error  
      = render partial: 'shared/error_messages', locals: {user: @user, column: "email"}
  .field
    = f.label :password,"パスワード"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length}文字以上で入力してください)
    = f.password_field :password, autocomplete: "new-password"
    .field-error  
      = render partial: 'shared/error_messages', locals: {user: @user, column: "password"}
  .field
    = f.label :password_confirmation,"パスワード(確認用)"
    = f.password_field :password_confirmation, autocomplete: "new-password"
    .field-error  
      = render partial: 'shared/error_messages', locals: {user: @user, column: "password"}
  .actions
    = f.submit "登録する", class: "dev-btn"
= render "devise/shared/links"
